{
  "manifest_version": 3,
  "name": "Bitcoin Price Analyzer",
  "version": "1.0",
  "description": "Monitor Bitcoin prices and get AI-powered analysis with Telegram notifications",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://cryptopanic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 